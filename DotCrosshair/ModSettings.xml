<?xml version="1.0" encoding="utf-8"?>
<ModSettings>
    <Global>
        <Tab name="General" displayKey="generalTabDisplayKey">
            <Category name="Dot" displayKey="dotCategoryDisplayKey">
                <Selector name="Shape" displayKey="dotShapeDisplayKey" defaultValue="round">
                    <Property type="arrayValues" allowedValues="round,square"/>
                </Selector>
                <Slider name="Size" displayKey="dotSizeDisplayKey" defaultValue="8">
                    <Property type="incrementalValuesInt" increment="1" minValue="0" maxValue="10"/>
                </Slider>
                <Switch
                        name="EnabledForRangedWeapons"
                        displayKey="enabledForRangedWeaponsDisplayKey"
                        tooltipKey="enabledForRangedWeaponsTooltipKey"
                        defaultValue="true"
                        leftValue="false"
                        rightValue="true"
                />
                <Slider name="Red" displayKey="dotRedDisplayKey" tooltipKey="dotRedTooltipKey" defaultValue="255">
                    <Property type="incrementalValuesInt" increment="1" minValue="0" maxValue="255"/>
                </Slider>
                <Slider name="Green" displayKey="dotGreenDisplayKey" tooltipKey="dotGreenTooltipKey" defaultValue="255">
                    <Property type="incrementalValuesInt" increment="1" minValue="0" maxValue="255"/>
                </Slider>
                <Slider name="Blue" displayKey="dotBlueDisplayKey" tooltipKey="dotBlueTooltipKey" defaultValue="255">
                    <Property type="incrementalValuesInt" increment="1" minValue="0" maxValue="255"/>
                </Slider>
                <Slider name="Alpha" displayKey="dotAlphaDisplayKey" tooltipKey="dotAlphaTooltipKey"
                        defaultValue="0.75">
                    <Property type="incrementalValuesFloat" increment="0.10" minValue="0" maxValue="1"/>
                </Slider>
            </Category>
        </Tab>
        <Tab name="Square" displayKey="squareTabDisplayKey" tooltipKey="squareTabTooltipKey">
            <Category name="Shadow" displayKey="shadowCategoryDisplayKey">
                <Switch
                        name="Enabled"
                        displayKey="shadowEnabledDisplayKey"
                        defaultValue="true"
                        leftValue="false"
                        rightValue="true"
                />
                <Slider name="Size" displayKey="shadowSizeDisplayKey" defaultValue="0.1">
                    <Property type="incrementalValuesFloat" increment="0.01" minValue="0" maxValue="1"/>
                </Slider>
                <Slider name="OffsetX" displayKey="shadowOffsetXDisplayKey" defaultValue="0.5">
                    <Property type="incrementalValuesFloat" increment="0.10" minValue="-10" maxValue="10"/>
                </Slider>
                <Slider name="OffsetY" displayKey="shadowOffsetYDisplayKey" defaultValue="1.5">
                    <Property type="incrementalValuesFloat" increment="0.10" minValue="-10" maxValue="10"/>
                </Slider>
            </Category>
        </Tab>
    </Global>
</ModSettings>